generator client {
  provider        = "prisma-client-js"
  binaryTargets   = env("PRISMA_BINARY_TARGETS")
  previewFeatures = ["extendedWhereUnique", "fieldReference", "filteredRelationCount", "fullTextIndex", "fullTextSearch", "metrics", "orderByNulls"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String  @db.VarChar(64)
  email String  @unique @db.VarChar(320)
  image String? @db.VarChar(1024)

  Thread Thread[]
}

model Thread {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int

  Message Message[]

  @@index([userId])
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role    RoleType
  content String   @db.VarChar(8192)

  thread   Thread @relation(fields: [threadId], references: [id])
  threadId Int

  @@index([threadId])
}

enum RoleType {
  system
  assistant
  user
}
